<!-- Include Header  -->
<%- include ('./partials/head') %>
<body>
    <main>
    <!-- Include navbar -->
    <%- include ('./partials/navbar') %> 
        
        <div class="container">
            <header>
                <h1 class="fw-400">Questions</h1>
                <hr>
            </header>
            
            <% questions.forEach( question => { %>
                
                <section class="card material__card-shadow card__questions">
                    <header class="card-header">
                        <span><%= question.title  %> </span>
                    </header>
                    <button type='submit' class="btn material__btn material__shadow-none material__btn--answer">answer</button>
                </section>
                
                <% }) %> 
            </div>
            <a href="/question" class="btn material__btn-floating"><span class="material-icons text-light">mode_edit</span></a>
    </main>

    <!-- Include Footer -->
    <%- include ('./partials/scripts') %> 
</body>
</html>